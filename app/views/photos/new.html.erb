<!-- <head> -->
  <%= cloudinary_js_config %>
  <%= javascript_include_tag("jquery.ui.widget", "jquery.iframe-transport",
                             "jquery.fileupload", "jquery.cloudinary") %>

  <script  type="text/javascript">$(function() {
  if($.fn.cloudinary_fileupload !== undefined) {
    $("input.cloudinary-fileupload[type=file]").cloudinary_fileupload();
  }
});</script>

<!-- </head> -->

<h1>Upload a new photo</h1>

<%= form_with url: '/photos' do |f| %>
  <%= f.label 'Add your photo here' %></br>
  <%= cl_image_upload_tag(
    :file,
    :crop => :limit, :width => 2000, :height => 2000,
    :eager => [{ :crop => :fill, :width => 150, :height => 100 }]
    ) %></br>
  <%= f.label 'Caption' %>
  <%= f.text_field :caption %>
  <%= f.submit "Upload" %>
<% end %>
